{% extends 'base.html.twig' %}

{% block body %}
<article>
<h2>{{article.title}} </h2>
<div class="metadata">Edité le {{article.createdAt |
date("m/d/Y")}} à {{article.createdAt | date("h/i")}}</div>
<div class="content">
<img src="{{article.image}}" alt="">
{{article.content | raw }}
</div>
</article>
<a href="{{ path('app_blog') }}" class="btn btn-secondary mt-3">Retour à l'accueil</a>
{% endblock %}